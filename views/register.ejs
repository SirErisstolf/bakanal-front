    <body ng-controller="RegisterCtrl">

        <div class="header">
            <div class="container">
                <div class="row">
                    <div class="logo span4">
                        <h1><a href="">Ba<span class="red">k</span></a>anal <span class="red">.</span></a></h1>
                    </div>
                    <!--div class="links span8">
                        <a class="home" href="" rel="tooltip" data-placement="bottom" data-original-title="Home"></a>
                        <a class="blog" href="" rel="tooltip" data-placement="bottom" data-original-title="Blog"></a>
                    </div-->
                </div>
            </div>
        </div>

        <div class="register-container container">
            <div class="row">
                <div class="iphone span5">
                    <img src="assets/img/iphone.png" alt="">
                </div>
                <div class="register span6">
                    <form ng-submit="submit()">
                        <h2>Registra <span class="red"><strong>tus datos</strong></span></h2>
                        <label for="username">Username</label>
                        <input type="text" id="username" name="username" placeholder="Ingresa un nombre de usuario" ng-model="provider.username">
                        <label for="email">Email</label>
                        <input type="text" id="email" name="email" placeholder="Ingresa tu email" ng-model="provider.email">
                        <label for="pasword">Contraseña</label>
                        <input type="password" id="password" name="password" placeholder="" ng-model="provider.password" class="input-xlarge">
                        <label for="password_confirm">Confirmar Contraseña</label>
                         <input type="password" id="password_confirm" name="password_confirm" ng-model="provider.password_confirm"placeholder="" class="input-xlarge">

                        <button type="submit">REGISTRAR</button>                        
                    </form>
                </div>
            </div>
        </div>

        <!-- Javascript -->
        <script src="assets/js/jquery-1.8.2.min.js"></script>
        <script src="assets/bootstrap/js/bootstrap.min.js"></script>
        <script src="assets/js/jquery.backstretch.min.js"></script>
        <script src="assets/js/scripts.js"></script>

    </body>

