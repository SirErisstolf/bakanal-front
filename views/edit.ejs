            <div class="row">
                <div class="register span6">
                    <form >
                        <h2>Datos <span class="red"><strong>personales</strong></span></h2>
                        <p>Completa los siguientes campos personales:</p>
                        <label for="nombre">Nombre</label>
                        <input type="text" id="nombre" name="nombre" placeholder="Tu nombre artistico" ng-model="provider.nombre">
                        <label for="nombre">Frase</label>
                        <input type="text" id="frase" name="frase" placeholder="Tu slogan. Ej. La mas Sexy" ng-model="provider.frase">
                        <label for="edad">Edad</label>
                        <input type="text" id="edad" name="edad" placeholder="Tu edad. Ej: 24 " ng-model="provider.edad">
                        <label for="estatura">Estatura</label>
                        <input type="text" id="estatura" name="estatura" placeholder="Tu estatura. Ej: 1.65" ng-model="provider.estatura">
                        <label for="peso">Peso</label>
                        <input type="text" id="peso" name="peso" placeholder="Tu peso. Ej. 54 Kg" ng-model="provider.peso">
                        <label for="medidas">Medidas</label>
                        <input type="text" id="medidas" name="medidas" placeholder="Tus medidas Ej. 90-60-90" ng-model="provider.medidas">                        		                    	
                    </form>
                </div>
                <div class="register span6">
                    <form>
                        <h2>Datos <span class="red"><strong>comerciales</strong></span></h2>
                        <p>Completa los siguientes campos comerciales:</p>
                        <label for="precio">Precio</label>
                        <input type="text" id="precio" name="precio" placeholder="Ej. 50000" ng-model="provider.precio">
                        <label for="horario">Horario</label>
                        <input type="text" id="horario" name="horario" placeholder="Ej. Todo el dia. 14:00 - 23:00" ng-model="provider.horario">
						<label for="sector">Sector</label>
                        <autocomplete ng-model="provider.sector" attr-placeholder="Selecciona o Ingresa sector. Ej. Santiago Centro" click-activation="true" data="movies" on-type="doSomething" on-select="doSomethingElse"></autocomplete>
                        <label for="servicios">Servicios</label>
                        <input type="text" id="servicios" name="servicios" placeholder="Ej. Normales, parejas, mujeres, americana" ng-model="provider.servicios">
                        <label for="telefono">Teléfono</label>
                        <input type="text" id="telefono" name="telefono" placeholder="Ej. 87654321" ng-model="provider.telefono">
                        <label for="telefono">TV?</label>
                        <input type="checkbox" id="tv" name="tv" ng-model="provider.tv">
					</form>
                </div>
            </div>
